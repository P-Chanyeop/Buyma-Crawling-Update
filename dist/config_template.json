{
  "_comment": "BUYMA 자동화 프로그램 설정 파일 템플릿",
  "_version": "1.0.0",
  "_last_updated": "2025-01-16",
  
  "account_settings": {
    "_comment": "BUYMA 계정 정보 (보안상 실제 정보는 프로그램에서 입력)",
    "email": "",
    "password": "",
    "remember_login": true
  },
  
  "browser_settings": {
    "_comment": "브라우저 관련 설정",
    "browser_type": "Chrome",
    "headless_mode": false,
    "window_size": {
      "width": 1920,
      "height": 1080
    },
    "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
  },
  
  "crawling_settings": {
    "_comment": "크롤링 관련 설정",
    "default_crawl_count": 20,
    "max_crawl_count": 100,
    "timeout_seconds": 10,
    "retry_count": 3,
    "delay_between_requests": 3,
    "max_images_per_product": 20,
    "supported_image_formats": ["jpg", "jpeg", "png", "gif"],
    "crawling_selectors": {
      "_comment": "BUYMA 사이트 선택자 (사이트 변경 시 수정 필요)",
      "product_container": [".item", ".product-item", "[class*='item']"],
      "product_title": [".item-title", ".product-title", ".title", "h3", "h4"],
      "product_brand": [".brand", ".brand-name", "[class*='brand']"],
      "product_price": [".price", ".cost", "[class*='price']"],
      "product_image": ["img[src*='jpg']", "img[src*='jpeg']", "img[src*='png']"],
      "product_url": ["a[href*='/item/']"]
    }
  },
  
  "price_analysis_settings": {
    "_comment": "가격 분석 관련 설정",
    "default_discount_amount": 100,
    "min_discount_amount": 10,
    "max_discount_amount": 1000,
    "min_margin_yen": 500,
    "exclude_loss_products": true,
    "auto_price_update": true,
    "price_comparison_keywords": ["브랜드명", "상품명"],
    "competitor_analysis": {
      "max_competitors": 20,
      "price_range_filter": {
        "min_price": 1000,
        "max_price": 500000
      }
    }
  },
  
  "upload_settings": {
    "_comment": "업로드 관련 설정",
    "max_images_upload": 10,
    "include_images": true,
    "include_color_options": true,
    "include_size_options": true,
    "skip_duplicate_products": true,
    "default_category": "레디스 패션",
    "default_shipping": "국제배송",
    "upload_mode": "즉시 등록",
    "image_optimization": {
      "resize_images": true,
      "max_image_size_mb": 5,
      "image_quality": 85
    }
  },
  
  "automation_settings": {
    "_comment": "자동화 프로세스 설정",
    "full_automation_enabled": true,
    "step_delays": {
      "after_crawling": 5,
      "after_upload": 10,
      "after_price_analysis": 5,
      "after_price_update": 3
    },
    "error_handling": {
      "max_retries": 3,
      "retry_delay_seconds": 5,
      "auto_recovery_enabled": true,
      "create_error_reports": true
    },
    "session_management": {
      "session_timeout_minutes": 30,
      "auto_relogin": true,
      "session_check_interval": 300
    }
  },
  
  "system_settings": {
    "_comment": "시스템 관련 설정",
    "log_level": "INFO",
    "max_log_files": 10,
    "backup_settings": {
      "auto_backup": true,
      "backup_interval_hours": 24,
      "max_backup_files": 7
    },
    "performance": {
      "max_memory_usage_percent": 80,
      "max_cpu_usage_percent": 90,
      "resource_check_interval": 60
    }
  },
  
  "ui_settings": {
    "_comment": "사용자 인터페이스 설정",
    "window_geometry": {
      "x": 100,
      "y": 100,
      "width": 1400,
      "height": 1000
    },
    "theme": "default",
    "font_size": 10,
    "show_system_monitor": true,
    "auto_scroll_logs": true,
    "confirm_before_actions": true
  },
  
  "network_settings": {
    "_comment": "네트워크 관련 설정",
    "connection_timeout": 30,
    "read_timeout": 60,
    "max_redirects": 5,
    "verify_ssl": true,
    "proxy_settings": {
      "use_proxy": false,
      "proxy_host": "",
      "proxy_port": 0,
      "proxy_username": "",
      "proxy_password": ""
    }
  },
  
  "data_management": {
    "_comment": "데이터 관리 설정",
    "export_formats": ["xlsx", "csv", "json"],
    "default_export_format": "xlsx",
    "data_retention_days": 30,
    "auto_cleanup_temp_files": true,
    "session_data_save": true
  },
  
  "security_settings": {
    "_comment": "보안 관련 설정",
    "encrypt_saved_passwords": true,
    "clear_browser_data": false,
    "private_browsing": false,
    "disable_images_loading": false,
    "disable_javascript": false
  },
  
  "advanced_settings": {
    "_comment": "고급 사용자 설정 (변경 시 주의)",
    "debug_mode": false,
    "verbose_logging": false,
    "custom_selectors_enabled": false,
    "experimental_features": false,
    "developer_mode": false
  }
}
